<%= turbo_frame_tag "edit_patient" do %>
  <%= form_with(model: @patient, local: true) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="field">
      <%= form.label :patient_email %>
      <%= form.text_field :patient_email %>
    </div>
    <div class="field">
      <%= form.label :dob %>
      <%= form.date_field :dob %>
    </div>
    <div class="actions">
      <%= form.submit 'Update' %>
    </div>
  <% end %>
<% end %>
