<header class="bg-blue-500 p-4 text-white">
  <nav>
    <ul class="flex space-x-4">
      <li><%= link_to 'Home', root_path, class: "hover:text-gray-300" %></li>
      <% if user_signed_in? %>
        <li class="flex items-center space-x-2">
          <span>Welcome, <%= current_user.name %> (<%= current_user.role %>)</span>
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
        </li>
      <% else %>
        <li><%= link_to 'Login', new_user_session_path, class: "hover:text-gray-300" %></li>
      <% end %>
    </ul>
  </nav>
</header>
