<div class="my-6 flex justify-end">
  <%= turbo_frame_tag 'add_user' do %>
    <%= link_to 'Add User', new_user_registration_path, class: "text-white bg-gradient-to-r from-indigo-500 via-indigo-600 to-indigo-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-indigo-300 shadow-lg font-medium rounded-lg text-sm px-6 py-2.5 cursor-pointer transition duration-300" %>
  <% end %>
</div>
<table class="min-w-full divide-y divide-gray-200 shadow-md bg-white rounded-lg overflow-hidden">
  <thead class="bg-indigo-100">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Name</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Email</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Role</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @users.each do |user| %>
      <tr class="hover:bg-gray-50 transition duration-300">
        <td class="px-6 py-4 whitespace-nowrap text-gray-700"><%= user.name %></td>
        <td class="px-6 py-4 whitespace-nowrap text-gray-700"><%= user.email %></td>
        <td class="px-6 py-4 whitespace-nowrap text-gray-700 capitalize"><%= user.role %></td>
        <td class="px-6 py-4 whitespace-nowrap">
          <%= turbo_frame_tag 'edit_user' do %>
            <%= link_to 'Edit', edit_user_registration_admin_path(user), class: "text-white bg-gradient-to-r from-indigo-500 via-indigo-600 to-indigo-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-indigo-300 shadow-lg font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 cursor-pointer transition duration-300" %>
          <% end %>
          |
          <%= link_to 'Delete', destroy_user_admin_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 shadow-lg font-medium rounded-lg text-sm px-5 py-2.5 text-center ml-2 cursor-pointer transition duration-300" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
